{% extends 'index.twig' %}

{% block titulo %}
    Funcionários Cadastrados
{% endblock %}

{% block content %}
<!-- <table class="table table-hover table-condensed"> -->
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                <a href='#'>#</a>
            </th>
            <th>
                <a href='#'>Nome</a>
            </th>
            <th>
                <a href='#'>Cargo</a>
            </th>
        </tr>
    </thead>
    <tbody>
        {% for funcionario in template.objFuncionario %}
            <tr>
                <td>
                    {{ funcionario.idfuncionario }}
                </td>
                <td>
                    <a href='index.php?idfuncionario={{ funcionario.idfuncionario }}'>{{ funcionario.nome }}</a>
                </td>
                <td>
                    {{ funcionario.cargo }}
                </td>
                <td>
                    <button type="button" class="btn btn-dark" onclick="registrarCafe({{ funcionario.idfuncionario }})"><i class="fas fa-coffee"></i></button>
                    <button type="button" class="btn btn-primary" onclick="visualizar({{ funcionario.idfuncionario }})"><i class="far fa-eye"></i></button>
                    <button type="button" class="btn btn-info" onclick="editar({{ funcionario.idfuncionario }})"><i class="fas fa-edit"></i></button>
                    <button type="button" class="btn btn-danger" onclick="excluir({{ funcionario.idfuncionario }})"><i class="fas fa-trash-alt"></i></button>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
<button type="button" class="btn btn-dark" onclick="cadastrar()" >Novo Funcionário</button>
{% endblock %}