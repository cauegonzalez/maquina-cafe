{% extends 'index.twig' %}

{% block titulo %}
    Relatório Retiradas de Café
{% endblock %}

{% block content %}
<!-- <table class="table table-hover table-condensed"> -->
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                <a href='#'>#</a>
            </th>
            <th>
                <a href='#'>Funcionário</a>
            </th>
            <th>
                <a href='#'>Cargo</a>
            </th>
            <th>
                <a href='#'>Tipo Café</a>
            </th>
            <th>
                <a href='#'>Data/Hora</a>
            </th>
        </tr>
    </thead>
    <tbody>
        {% for historicoCafe in template.objHistoricoCafe %}
            <tr>
                <td>
                    {{ historicoCafe.idhistoricoCafe }}
                </td>
                <td>
                    {{ historicoCafe.nome }}
                </td>
                <td>
                    {{ historicoCafe.cargo }}
                </td>
                <td>
                    {{ historicoCafe.tipoCafe }}
                </td>
                <td>
                    {{ historicoCafe.dataHora }}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
<!-- <button type="button" class="btn btn-dark" onclick="cadastrar()" >Novo Funcionário</button> -->
{% endblock %}